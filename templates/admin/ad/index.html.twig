{% extends 'admin/base.html.twig' %}

{% block title %}Administration des annonces!{% endblock %}

{% block body %}

    <div class="container-fluid">
        <h1 class="my-5">Gestion des annonces</h1>

        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Titre</th>
                    <th>Auteur</th>
                    <th>RÃ©servation</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for ad in ads %}
                
                <tr>
                    <td>{{ad.id}} </td>
                    <td>{{ad.title}} </td>
                    <td><img src="{{ad.author.picture}}" alt="{{ad.author.fullName}}" class="avatar avatar-micro mr-2"> {{ad.author.fullName}} </td>
                    <td>{{ad.bookings | length}} </td>
                    <td>
                        <a href="{{ path('admin_ads_edit',{'id': ad.ad.id}) }}" class="btn btn-primary"><i class="fa fa-pencil fa-fw"></i></a>
                        <a href="{{ path('admin_ads_edit',{'id': ad.ad.id}) }}" class="btn btn-danger"><i class="fa fa-trash fa-fw"></i></a>

                    </td>
                </tr>
            {% endfor %}
            </tbody>

        </table>
        <div class="d-flix justify-content-center">
            <ul class="pagination">
                <li class="page-item {% if page == i %} disabled {% endif %}">
                    <a href="{{ path('admin_ads_index', {'page': page - 1}) }}" class="page-link">&laquo;</a>
                </li>
            {% for i in 1..page %}
                
                <li class="page-item {% if page == i %} active {% endif %} ">
                    <a href="{{ path('admin_ads_index', {'page':i}) }}" class="page-link">{{i}}</a>
                </li>                
            {% endfor %}
                <li class="page-item {% if page == pages %} disabled {% endif %}">
                    <a href="{{ path('admin_ads_index', {'page': page + 1}) }}" class="page-link">&laquo;</a>
                </li>                
            </ul>
        </div>
    </div>

{% endblock %}
